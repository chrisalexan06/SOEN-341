generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ENUMS
enum ActivityLevel {
  SEDENTARY
  LIGHT
  MODERATE
  ACTIVE
  VERY_ACTIVE
}

enum Goal {
  BULK
  CUT
  MAINTAIN
}

enum DietaryType {
  NONE
  VEGAN
  VEGETARIAN
  KETO
  HALAL
  GLUTEN_FREE
  PESCATARIAN
}

// Model

model User {
  id            String    @id 

  email         String    @unique
  firstName     String   
  lastName      String
  
   
  
  age           Int
  currentWeight Float
  targetWeight  Float?
  height        Float

  // Enums 
  activityLevel ActivityLevel? 
  goal          Goal?          
  dietaryType   DietaryType?   

  allergies     String[]  // default is empty array [] automatically

  meals         Meal[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}


model Meal {
  id        String   @id @default(uuid())
  
  name      String
  imageUrl  String
  
  calories  Int?
  protein   Int?
  carbs     Int?
  fats      Int?
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
}