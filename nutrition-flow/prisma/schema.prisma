generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// --- ENUMS (Great choice!) ---
enum ActivityLevel {
  SEDENTARY
  LIGHT
  MODERATE
  ACTIVE
  VERY_ACTIVE
}

enum Goal {
  BULK
  CUT
  MAINTAIN
}

enum DietaryType {
  NONE
  VEGAN
  VEGETARIAN
  KETO
  HALAL
  GLUTEN_FREE
  PESCATARIAN
}

// --- MODELS ---

model User {
  id            String    @id // Clerk ID

  email         String    @unique
  firstName     String?   // Made optional just in case Clerk doesn't send it
  lastName      String?
  
  // ⚠️ These MUST be optional (?) so we can create the user 
  // BEFORE they finish the onboarding form.
  age           Int?
  currentWeight Float?
  targetWeight  Float?
  height        Float?

  // Enums (Also optional for now)
  activityLevel ActivityLevel? 
  goal          Goal?          
  dietaryType   DietaryType?   

  allergies     String[]  // default is empty array [] automatically

  meals         Meal[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

// You were missing this table!
model Meal {
  id        String   @id @default(uuid())
  
  name      String
  imageUrl  String?
  
  calories  Int
  protein   Int
  carbs     Int
  fats      Int
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
}